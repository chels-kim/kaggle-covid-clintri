  <primary_outcome>
    <measure>Inspiratory effort quantification</measure>
    <time_frame>24 hours from admission</time_frame>
    <description>Esophageal pressure assessment through dedicated esophageal pressure transducer</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Non invasive respiratory support failure</measure>
    <time_frame>24 hours</time_frame>
